public class ProductRating
{
    public int Id { get; set; }                // Primary Key
    public int ProductId { get; set; }         // Foreign Key to Products table
    public int Rating { get; set; }            // Rating value between 1 and 5
    public string Review { get; set; }         // Optional review text
    public DateTime CreatedAt { get; set; }    // Timestamp for when the rating was created

    // Navigation property
    public Product Product { get; set; }       // Reference to the related Product
}
